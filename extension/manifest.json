{
  "name": "project-3o",
  "description": "Competitive programming tracker widget",
  "version": "0.1.0",
  "manifest_version": 3,
  "permissions": ["storage"],
  "host_permissions": ["http://localhost:4000/*"],
  "content_scripts": [
    {
      "matches": [
        "https://codeforces.com/problemset/problem/*",
        "https://codeforces.com/contest/*/problem/*",
        "https://codeforces.com/group/*/contest/*/problem/*",
        "https://codeforces.com/gym/*/problem/*"
      ],
      "js": [
        "src/platforms/codeforces.js",
        "src/content/content.js"
      ],
      "css": ["src/ui/widget.css"]
    }
  ]
}
